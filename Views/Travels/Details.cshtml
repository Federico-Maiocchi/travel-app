        <!--Bottoni-->
        <div class="form-group">
            <div class="row">
                <!-- Modifica -->
                <div class="col-md-2 ">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Modifica</a>
                </div>
                <!-- Torna all' Travels/INDEX -->
                <div class="col-md-2 ">
                    <a asp-action="Index" class="btn btn-danger">Torna Alla lista</a>
                </div>
            </div>
        </div>
    </div>   
