        <div class="row">
            <div class="row">
                <div class="fw-bold">
                    Descrizione:
                </div>
                <div>
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>

            <div class="d-flex pt-3">
                <div class="col-3 d-flex">
                    <div class="fw-bold ">
                        Data inizio:
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.StartDate)
                    </div>
                </div>

                <div class="col-3 d-flex">
                    <div class="fw-bold">
                        Data fine:
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.EndDate)
                    </div>
                </div>

            </div>

            <div class="d-flex pt-3">
                <div class="col-3 d-flex">
                    <div class="fw-bold">
                        Creato da:
                    </div>
                    <div>
